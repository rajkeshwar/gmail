block variables
- var json = self.htmlWebpackPlugin.options.json

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible" content="ie=edge")
    title Gmail
    link(rel="shortcut icon" href="https://ssl.gstatic.com/ui/v1/icons/mail/images/favicon5.ico" type="image/x-icon")
    link(href="https://fonts.googleapis.com/css?family=RobotoDraft|Roboto:400,500" rel="stylesheet")
  body
    include src/pug/header.pug

    .gmail-content
      .content
        .content__left
          include src/pug/sidebar.pug

        .content__middle
          .main-area
            include src/pug/main-area.pug

        .content__right
            include src/pug/content-right.pug




